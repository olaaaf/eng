{
  "name": "agent",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "twxs.cmake",
        "ms-vscode.cmake-tools",
        "llvm-vs-code-extensions.vscode-clangd",
        "disroop.conan"
      ]
    }
  },
  "forwardPorts": [8000],

  "runArgs": ["--network=shared", "--hostname=agent"],
  "postCreateCommand": "cd /workspaces/eng/agent && conan install . --output-folder=build --build=missing"
}
